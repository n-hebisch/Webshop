<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Product{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block body %}
    {{ include('header.html.twig') }}
    <div class="container">
        <div class="row">
            <div class="col-3">
                <ul id="categories" class="list-group">

                </ul>
            </div>
            <div class="col-9">
                <h3>Products</h3>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.name }}</td>
                            <td>{{ product.price }}â‚¬</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>

    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $.get("/category", function (data, status) {
            var html = '<li class="list-group-item"><h4>Categories</h4></li>';
            var categories = JSON.parse(data);
            categories.forEach(function (entry) {
                html += '<li class="list-group-item">' + entry.category_name + '</li>'
            });
            document.getElementById('categories').innerHTML = html;
        });
    </script>
{% endblock %}
</body>
</html>